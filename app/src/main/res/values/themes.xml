<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AnaRaya" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <item name="android:colorAccent">@color/colorPrimary</item>
        <!--   A darker variant of the primary color, used for
           the status bar (on Android 5.0+) and contextual app bars. -->
        <!--        <color name="colorPrimaryDark">#303F9F</color>-->

        <!--   a secondary color for controls like checkboxes and text fields. -->
        <item name="colorAccent">@color/colorTextApp</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>


    <style name="Theme_Dialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="Theme.AnaRaya" parent="Base.Theme.AnaRaya" />

    <style name="ThemeOverlay.AppCompat.Dialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogButtonStyled</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogButtonStyled</item>
    </style>

    <style name="DialogButtonStyled" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorPrimary</item> <!-- button text color -->
    </style>

    <style name="buttonStyle">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textSize">@dimen/txtHead</item>
    </style>

    <style name="buttonStyle2">
        <item name="android:background">@drawable/shape_button_add_items</item>
        <item name="backgroundTint">@color/colorBackBtnAddItems</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontFamily">@font/inter400</item>
    </style>

    <style name="textHead">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/txtHead</item>
        <item name="fontFamily">@font/inter_light</item>
    </style>

    <style name="textUnderHead">
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">@dimen/txtUnderHead</item>
        <item name="fontFamily">@font/inter_light</item>
    </style>

    <style name="textNormalTitle">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/inter_light</item>
    </style>

    <style name="textNormal">
        <item name="android:textColor">@color/colorGreyText</item>
        <item name="fontFamily">@font/inter_light</item>
    </style>

    <style name="textNormalHome">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontFamily">@font/inter_light</item>
    </style>

    <style name="textMore">
        <item name="android:textColor">@color/color_text_clicked</item>
        <item name="fontFamily">@font/inter400</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="textBottomSheet">
        <item name="android:textColor">@color/color_text_clicked</item>
        <item name="fontFamily">@font/inter500</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textPriceBottomSheet">
        <item name="android:textColor">@color/colorTextApp</item>
        <item name="fontFamily">@font/inter500</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textBottomSheetStore">
        <item name="android:textColor">@color/color_text_clicked_store</item>
        <item name="fontFamily">@font/inter500</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="btnAddressTypeSelected">
        <item name="android:background">@drawable/shape_button_add_2</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/inter400</item>
    </style>
    <style name="btnAddressTypeDelete">
        <item name="android:background">@drawable/shape_button_delete</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/inter400</item>
    </style>

    <style name="btnAddressTypeUnSelected">
        <item name="android:background">@drawable/shape_button_apartment</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontFamily">@font/inter400</item>
    </style>

    <style name="textAddEditAddressName">
        <item name="fontFamily">@font/inter400</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorGreyText</item>
    </style>

    <style name="textAddEditAddressHint">
        <item name="fontFamily">@font/inter500</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextApp</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
    </style>

    <style name="textHeadTotalCost">
        <item name="android:textColor">@color/colorTextTotalCost</item>
        <item name="fontFamily">@font/inter500</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textUnderHeadTotalCost">
        <item name="android:textColor">@color/colorTextTotalCost</item>
        <item name="fontFamily">@font/inter400</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textUnderHeadValueTotalCost">
        <item name="android:textColor">@color/colorTextTotalCostSecond</item>
        <item name="fontFamily">@font/inter400</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="styleCheckBoxFilter" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="android:button">@null</item>
        <item name="android:drawableStart">@drawable/background_check_box_filter</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textColor">@color/color_text_check_box_filter</item>
        <item name="fontFamily">@font/inter500</item>
        <item name="android:textSize">16sp</item>
        <item name="background">@null</item>
    </style>

    <style name="Widget.App.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="buttonTint">@color/color_radio</item>
    </style>

    <style name="textTitleBar">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/inter400</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textMyInfo">
        <item name="android:textColor">@color/colorGreyText</item>
        <item name="fontFamily">@font/inter500</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textMyInfoValue">
        <item name="android:textColor">@color/colorGreyTextMyInfoValue</item>
        <item name="fontFamily">@font/inter500</item>
        <item name="android:textSize">16sp</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="textMyInfoEdit">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontFamily">@font/inter400</item>
        <item name="android:textSize">16sp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="textValidatePass">
        <item name="fontFamily">@font/inter400</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="normalEditTextApp">
        <item name="boxBackgroundMode">filled</item>
        <item name="endIconMode">clear_text</item>
        <item name="expandedHintEnabled">false</item>
        <item name="placeholderText">@string/text_here</item>
        <item name="placeholderTextColor">@color/colorTextHint</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="passwordEditTextApp">
        <item name="boxBackgroundMode">filled</item>
        <item name="endIconMode">password_toggle</item>
        <item name="expandedHintEnabled">false</item>
        <item name="placeholderText">@string/text_here</item>
        <item name="helperText">@string/text_validate_pass</item>
        <item name="placeholderTextColor">@color/colorTextHint</item>
        <item name="helperTextTextColor">@color/colorTextHint</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="addressEditText">
        <item name="boxBackgroundMode">outline</item>
        <item name="endIconMode">clear_text</item>
        <item name="expandedHintEnabled">false</item>
        <item name="placeholderText">@string/text_here</item>
        <item name="placeholderTextColor">@color/colorTextHint</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="boxStrokeColor">@color/color_stroke_search</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
    </style>

    <style name="textHelpItem">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/inter500</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textHelpDetailsProblem">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/inter400</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textHelpDetailsAnswer">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/inter400</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textHelpDetailsHead">
        <item name="android:textColor">@color/colorTextGrey</item>
        <item name="fontFamily">@font/inter500</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textOrderStatus">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/inter400</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textPromoName">
        <item name="android:textColor">@color/colorOffWhite</item>
        <item name="fontFamily">@font/inter700</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="textPromoOff">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/inter400</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="OtpWidget.OtpView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>
</resources>