        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btnDeleteAddress"
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:layout_marginVertical="5dp"
