<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.anaraya.anaraya.screens.productdetails.ProductDetailsViewModel" />
        <variable
            name="sharedViewModel"
            type="com.anaraya.anaraya.screens.activity.HomeActivityViewModel" />
    </data>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollIndicators="end"
        android:scrollbars="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".screens.productdetails.ProductDetailsFragment">
            <ProgressBar
                android:id="@+id/progress_productDetails"
                style="?android:attr/progressBarStyleHorizontal"
                bindProgress="@{viewModel.product.loading}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:indeterminateBehavior="cycle"
                android:indeterminateTint="@color/colorPrimary"
                android:progressTint="@color/colorPrimary"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardProductDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_card_product_details"
                android:padding="20dp"
                app:layout_constraintTop_toBottomOf="@+id/progress_productDetails">
                <ImageButton
                    android:id="@+id/btnBackProductDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_arrow_back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <ImageButton
                    android:id="@+id/btnCartProductDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:onClick="@{()->viewModel.navigateToCart()}"
                    android:padding="5dp"
                    android:src="@drawable/ic_cart"
                    app:layout_constraintBottom_toBottomOf="@+id/btnBackProductDetails"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/btnBackProductDetails" />
                <TextView
                    android:id="@+id/txtBadge"
                    style="@style/textNormal"
                    bindTextNumOfBasket="@{sharedViewModel.homeState.productInBasket}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_badge"
                    android:maxLength="4"
                    android:paddingHorizontal="5dp"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toTopOf="@+id/viewPagerProductDetails"
                    app:layout_constraintEnd_toEndOf="@+id/btnCartProductDetails"
                    tools:text="20"
                    tools:ignore="SmallSp" />
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTxtDiscountItemProductDetails"
                    bindCardDiscountPrice="@{viewModel.product.productDetailsUiState.discount}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorBackgroundTextDiscount"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintStart_toStartOf="@+id/viewPagerProductDetails"
                    app:layout_constraintTop_toBottomOf="@+id/btnBackProductDetails">
                    <TextView
                        android:id="@+id/txtDiscountItemProductDetails"
                        style="@style/textNormalHome"
                        bindTxtDiscountPrice="@{viewModel.product.productDetailsUiState.discount}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:padding="2dp"
                        android:textSize="@dimen/dimen_text_discount_size"
                        app:drawableStartCompat="@drawable/ic_discount"
                        tools:ignore="SmallSp"
                        tools:text="Discount 20%" />
                </androidx.cardview.widget.CardView>
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPagerProductDetails"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/colorBackGroundCardProductDetails"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btnCartProductDetails"
                    app:layout_constraintStart_toEndOf="@+id/btnBackProductDetails"
                    app:layout_constraintTop_toBottomOf="@+id/cardTxtDiscountItemProductDetails" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                android:id="@+id/dotsIndicatorSlider_productDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:dotsColor="@color/colorDotsUnSelected"
                app:dotsCornerRadius="8dp"
                app:dotsSize="5dp"
                app:dotsSpacing="4dp"
                app:dotsWidthFactor="2.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardProductDetails"
                app:progressMode="true"
                app:selectedDotColor="@color/colorPrimary" />
            <TextView
                android:id="@+id/txtNameProductDetails"
                style="@style/textNormalTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:text="@{viewModel.product.productDetailsUiState.name}"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/btnFavProductDetails"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dotsIndicatorSlider_productDetails"
                tools:text="Naturel Red Apple" />
