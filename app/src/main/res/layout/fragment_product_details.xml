<!--                app:layout_constraintTop_toBottomOf="@+id/btnMinusProductDetails" />-->
            <View
                android:id="@+id/lineUnderQtyProductDetails"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_line"
                app:layout_constraintEnd_toEndOf="@+id/btnFavProductDetails"
                app:layout_constraintStart_toStartOf="@+id/txtNameProductDetails"
                app:layout_constraintTop_toBottomOf="@+id/txtPriceProductDetails" />
