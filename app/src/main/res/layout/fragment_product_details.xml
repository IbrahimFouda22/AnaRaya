<!--                tools:text="1kg,Price" />-->
            <ImageButton
                android:id="@+id/btnFavProductDetails"
                bindFav="@{viewModel.product.favouriteStock}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="@{()->viewModel.favButton()}"
                app:layout_constraintBottom_toBottomOf="@+id/txtNameProductDetails"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txtNameProductDetails" />
            <TextView
                android:id="@+id/txtLeftQty"
                availableQtyCardBasket="@{viewModel.product.productDetailsUiState.availableQty}"
                qtyInBasketCardBasket="@{viewModel.product.productDetailsUiState.qtyInBasket}"
                android:layout_width="0dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter300"
                android:textColor="@color/colorGreyText"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/txtNameProductDetails"
                app:layout_constraintTop_toBottomOf="@+id/txtNameProductDetails"
                tools:text="" />
            <ImageButton
                android:id="@+id/btnMinusProductDetails"
                bindButtonMinusQtyBasket="@{viewModel.product.btnMinusVisibility}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="@{()->viewModel.minusQty()}"
                android:src="@drawable/ic_minus"
                app:layout_constraintStart_toStartOf="@+id/txtNameProductDetails"
                app:layout_constraintTop_toBottomOf="@+id/txtLeftQty" />
            <TextView
                android:id="@+id/txtQtyCountProductDetails"
                style="@style/textNormalTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:background="@drawable/background_text_qty"
                android:paddingHorizontal="14dp"
                android:paddingVertical="6dp"
                android:text="@{Integer.toString(viewModel.product.qtyInBasket)}"
                app:layout_constraintBottom_toBottomOf="@+id/btnMinusProductDetails"
                app:layout_constraintStart_toEndOf="@+id/btnMinusProductDetails"
                app:layout_constraintTop_toTopOf="@+id/btnMinusProductDetails"
                tools:text="1" />
            <ImageButton
                android:id="@+id/btnPlusProductDetails"
                bindButtonPlusQtyBasket="@{viewModel.product.btnPlusVisibility}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="@{()->viewModel.plusQty()}"
                android:padding="5dp"
                android:src="@drawable/ic_add_product_details"
                app:layout_constraintBottom_toBottomOf="@+id/btnMinusProductDetails"
                app:layout_constraintStart_toEndOf="@+id/txtQtyCountProductDetails"
                app:layout_constraintTop_toTopOf="@+id/btnMinusProductDetails" />
            <TextView
                android:id="@+id/txtPriceProductDetails"
                style="@style/textNormalTitle"
                bindTxtPrice="@{viewModel.product.allPrice}"
                isPoints="@{viewModel.points}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/btnMinusProductDetails"
                app:layout_constraintEnd_toEndOf="@+id/btnFavProductDetails"
                app:layout_constraintTop_toTopOf="@+id/btnMinusProductDetails"
                tools:text="$4.99" />
<!--            <TextView-->
<!--                android:id="@+id/txtLimitation"-->
<!--                bindTextLimitation="@{viewModel.product.productDetailsUiState.limitQtyForUserPerMonth}"-->
<!--                android:layout_width="0dp"-->
