            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAddToBasket"
                availableQty="@{viewModel.product.productDetailsUiState.availableQty}"
                inBasket="@{viewModel.product.productDetailsUiState.inBasket}"
                limitation="@{viewModel.product.productDetailsUiState.limitQtyForUserPerMonth}"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/shape_button_add_2"
                android:text="@string/add_to_basket"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="@+id/btnFavProductDetails"
                app:layout_constraintStart_toStartOf="@+id/txtNameProductDetails"
                app:layout_constraintTop_toBottomOf="@id/lineUnderQtyProductDetails" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cardBasket"
                availableQtyFrom="@{viewModel.product.productDetailsUiState.availableQty}"
                inBasketFrom="@{viewModel.product.productDetailsUiState.inBasket}"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/shape_button_remove_from_cart"
                android:onClick="@{()->viewModel.removeProductFromCart()}"
                android:text="@string/remove_from_cart"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="@+id/btnFavProductDetails"
                app:layout_constraintStart_toStartOf="@+id/txtNameProductDetails"
                app:layout_constraintTop_toBottomOf="@id/lineUnderQtyProductDetails"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAddNotify"
                bindCardNoStocks="@{viewModel.product.productDetailsUiState.availableQty}"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/shape_button_add_2"
                bindNotifyText="@{viewModel.product.productDetailsUiState.notifyMe}"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="@+id/btnFavProductDetails"
                app:layout_constraintStart_toStartOf="@+id/txtNameProductDetails"
                app:layout_constraintTop_toBottomOf="@id/lineUnderQtyProductDetails" />
            <androidx.constraintlayout.widget.ConstraintLayout
                bindVisibilityConsHomeTrending="@{viewModel.product.visibilityRecommended}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/btnAddToBasket"
                app:layout_constraintTop_toBottomOf="@+id/btnAddToBasket">
                <TextView
                    android:id="@+id/txtRecommendedProducts"
                    style="@style/textNormalTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/recommended_products"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerRecommended"
                    bindRecyclerLayout="@{true}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:clipToPadding="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtRecommendedProducts"
                    tools:itemCount="1"
                    tools:listitem="@layout/layout_item_home_category" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>