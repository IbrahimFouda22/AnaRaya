<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="userAction"
            type="Integer" />

        <variable
            name="state"
            type="Integer" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_bottom_sheet"
        android:padding="20dp">

        <TextView
            android:id="@+id/txtProceedSale"
            style="@style/textBottomSheetStore"
            stateSale="@{state}"
            userActionSale="@{userAction}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:paddingVertical="10dp"
            android:text="@string/proceed_with_sale"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/lineUnderTxtProceedSale"
            stateSale="@{state}"
            userActionSale="@{userAction}"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/shape_line"
            app:layout_constraintTop_toBottomOf="@+id/txtProceedSale" />

        <TextView
            android:id="@+id/txtRequestToEdit"
            style="@style/textBottomSheetStore"
            stateEdit="@{state}"
            userActionEdit="@{userAction}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:paddingVertical="10dp"
            android:text="@string/request_to_edit"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/lineUnderTxtProceedSale" />

        <View
            android:id="@+id/lineUnderTxtRequestToEdit"
            stateEdit="@{state}"
            userActionEdit="@{userAction}"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/shape_line"
            app:layout_constraintTop_toBottomOf="@+id/txtRequestToEdit" />
        <TextView
            android:id="@+id/txtRequestToDelete"
            style="@style/textBottomSheetStore"
            stateDelete="@{state}"
            userActionDelete="@{userAction}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:paddingVertical="10dp"
            android:text="@string/request_to_delete"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/lineUnderTxtRequestToEdit" />
        <View
            android:id="@+id/lineUnderTxtDeliveryBottom"
            stateDelete="@{state}"
            userActionDelete="@{userAction}"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/shape_line"
            app:layout_constraintTop_toBottomOf="@+id/txtRequestToDelete" />
        <TextView
            android:id="@+id/txtCancelPending"
            style="@style/textBottomSheetStore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:paddingVertical="10dp"
            android:text="@string/cancel"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/lineUnderTxtDeliveryBottom" />
        <View
            android:id="@+id/lineUnderTxtDeliveryAddressBottom"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/shape_line"
            app:layout_constraintTop_toBottomOf="@+id/txtCancelPending" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>