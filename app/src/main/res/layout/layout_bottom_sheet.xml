            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_line"
            app:layout_constraintTop_toBottomOf="@+id/txtPromoCodeBottom" />-->


        <TextView
            android:id="@+id/txtTotalCostBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/inter300"
            android:text="@string/total_cost"
            android:textColor="@color/colorTextGrey"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/txtCheckOut"
            app:layout_constraintTop_toBottomOf="@+id/lineUnderTxtPaymentBottom" />

        <TextView
            android:id="@+id/txtTotalCostBottomValue"
            style="@style/textPriceBottomSheet"
            bindTxtPrice="@{item.totalCost}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:textAlignment="textEnd"
            app:layout_constraintBottom_toBottomOf="@+id/txtTotalCostBottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtTotalCostBottom"
            app:layout_constraintTop_toTopOf="@+id/txtTotalCostBottom"
            tools:text="$13.97" />

        <View
            android:id="@+id/lineUnderTxtTotalCostBottom"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_line"
            app:layout_constraintTop_toBottomOf="@+id/txtTotalCostBottom"
            tools:layout_editor_absoluteX="20dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/conTermsAndConditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lineUnderTxtTotalCostBottom">

            <TextView
                android:id="@+id/txtBeforeTerms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter400"
                android:text="@string/before_terms"
                android:textColor="@color/colorTextGrey"
                android:textSize="10sp"
                app:layout_constraintEnd_toStartOf="@+id/txtTermsCondition"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/txtTermsCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:fontFamily="@font/inter700"
                android:text="@string/terms_and_conditions"
                android:textColor="@color/colorTextNameProduct"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/txtBeforeTerms"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtBeforeTerms"
                app:layout_constraintTop_toTopOf="@+id/txtBeforeTerms"
                tools:ignore="SmallSp" />

