<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.anaraya.anaraya.screens.services.store.service.my_items.item_details.ItemDetailsServiceViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.services.store.service.my_items.item_details.ServiceDetailsOwnerFragment">


        <ImageButton
            android:id="@+id/btnBackAllExploreProductDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="5dp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtProductNameExploreProductDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:ellipsize="end"
            android:fontFamily="@font/inter_light"
            android:maxLines="2"
            android:text="@string/item_details"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnBackAllExploreProductDetails"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnBackAllExploreProductDetails" />

        <ProgressBar
            android:id="@+id/progressExploreProductDetails"
            style="?android:attr/progressBarStyleHorizontal"
            bindProgress="@{viewModel.product.loading}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:indeterminate="true"
            android:indeterminateBehavior="cycle"
            android:indeterminateTint="@color/colorPrimary"
            android:progressTint="@color/colorPrimary"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/txtProductNameExploreProductDetails" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progressExploreProductDetails">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardImageExploreProductDetails"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:backgroundTint="@color/colorGreyLight"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            bindImage="@{viewModel.product.product.serviceImageUrl}"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:scaleType="fitXY"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/txtNameExploreProductDetails"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/inter400"
                    android:textAlignment="viewStart"
                    android:text="@{viewModel.product.product.title}"
                    android:textColor="@color/colorTextNameProduct"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/txtPriceValueExploreProductDetails"
                    app:layout_constraintHorizontal_weight="2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardImageExploreProductDetails"
                    tools:text="Beef Bone" />

                <TextView
                    android:id="@+id/txtDescExploreProductDetails"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/inter400"
                    android:text="@{viewModel.product.product.serviceDescription}"
                    android:textColor="@color/colorTextGrey"
                    android:textSize="12sp"
                    android:textAlignment="viewStart"
                    app:layout_constraintEnd_toEndOf="@+id/txtPriceValueExploreProductDetails"
                    app:layout_constraintStart_toStartOf="@+id/txtNameExploreProductDetails"
                    app:layout_constraintTop_toBottomOf="@+id/txtNameExploreProductDetails"
                    tools:text="Beef Bone" />

                <TextView
                    android:id="@+id/txtPriceValueExploreProductDetails"
                    bindTxtPrice="@{viewModel.product.product.price}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="30dp"
                    android:ellipsize="end"
                    android:textAlignment="viewStart"
                    android:fontFamily="@font/inter400"
                    android:maxLines="1"
                    android:textColor="@color/colorTextNameProduct"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/txtNameExploreProductDetails"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@+id/txtNameExploreProductDetails"
                    app:layout_constraintTop_toTopOf="@+id/txtNameExploreProductDetails"
                    tools:text="1000.0 EGP" />

                <TextView
                    android:id="@+id/txtCategoryValueExploreProductDetails"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter400"
                    android:maxLines="2"
                    android:text="@{viewModel.product.product.category}"
                    android:textColor="@color/colorGrey"
                    android:textSize="12sp"
                    android:textAlignment="viewStart"
                    app:layout_constraintEnd_toEndOf="@+id/txtPriceValueExploreProductDetails"
                    app:layout_constraintStart_toStartOf="@+id/txtNameExploreProductDetails"
                    app:layout_constraintTop_toBottomOf="@+id/txtDescExploreProductDetails"
                    tools:text="furniture" />

                <TextView
                    android:id="@+id/txtLocationValueExploreProductDetails"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter400"
                    android:maxLines="2"
                    android:text="@{viewModel.product.product.location}"
                    android:textColor="@color/colorGrey"
                    android:textSize="12sp"
                    android:textAlignment="viewStart"
                    app:layout_constraintEnd_toEndOf="@+id/txtPriceValueExploreProductDetails"
                    app:layout_constraintStart_toStartOf="@+id/txtCategoryValueExploreProductDetails"
                    app:layout_constraintTop_toBottomOf="@+id/txtCategoryValueExploreProductDetails"
                    tools:text="Cairo" />

                <TextView
                    android:id="@+id/txtProceedWithSale"
                    bindTextNumOfPurchase="@{viewModel.product.product.numberOfBuyers}"
                    bindViewVisibilityGone="@{viewModel.product.visibilityProceedWithSale}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    android:fontFamily="@font/inter700"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@+id/btnProceedWithSale"
                    app:layout_constraintEnd_toEndOf="@+id/txtLocationValueExploreProductDetails"
                    app:layout_constraintStart_toStartOf="@+id/txtLocationValueExploreProductDetails"
                    app:layout_constraintTop_toBottomOf="@+id/txtLocationValueExploreProductDetails"
                    app:layout_constraintVertical_chainStyle="packed"
                    tools:text="You have a 2 purchase request" />

                <Button
                    android:id="@+id/btnProceedWithSale"
                    bindViewVisibilityGone="@{viewModel.product.visibilityProceedWithSale}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_button_product_store"
                    android:fontFamily="@font/inter400"
                    android:paddingVertical="8dp"
                    android:text="@string/proceed_with_sale"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@+id/txtProceedWithNote"
                    app:layout_constraintEnd_toEndOf="@+id/txtLocationValueExploreProductDetails"
                    app:layout_constraintStart_toStartOf="@+id/txtLocationValueExploreProductDetails"
                    app:layout_constraintTop_toBottomOf="@+id/txtProceedWithSale" />

                <TextView
                    android:id="@+id/txtProceedWithNote"
                    bindViewVisibilityGone="@{viewModel.product.visibilityProceedWithSale}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:fontFamily="@font/inter400"
                    android:text="@string/please_not_that_by"
                    android:textAlignment="center"
                    android:textColor="@color/colorTextNameProduct"
                    android:textSize="14sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@id/btnRequestToEdit"
                    app:layout_constraintEnd_toEndOf="@+id/txtLocationValueExploreProductDetails"
                    app:layout_constraintStart_toStartOf="@+id/txtLocationValueExploreProductDetails"
                    app:layout_constraintTop_toBottomOf="@+id/btnProceedWithSale"
                    app:layout_constraintVertical_chainStyle="packed"
                    tools:text="Please not that by proceeding you are agreeing to pay in case item is accepted and has requests to purchase of 5% with a minimum of 50 L.E. (not including any delivery fees)" />

                <TextView
                    android:id="@+id/txtProceedWithSaleDone"
                    bindViewVisibilityGone="@{viewModel.product.visibilityProceedWithSaleDone}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="14dp"
                    android:fontFamily="@font/inter700"
                    android:text="@string/you_proceed_with_the_sale"
                    android:textAlignment="center"
                    android:textColor="@color/colorGrey"
                    android:textSize="16sp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@+id/txtLocationValueExploreProductDetails"
                    app:layout_constraintStart_toStartOf="@+id/txtLocationValueExploreProductDetails"
                    app:layout_constraintTop_toBottomOf="@+id/txtLocationValueExploreProductDetails"
                    tools:text="You proceed with the Sale" />

                <TextView
                    android:id="@+id/txtProceedWithSaleCustomerInfo"
                    bindViewVisibilityGone="@{viewModel.product.visibilityCustomerInfo}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="14dp"
                    android:fontFamily="@font/inter700"
                    android:text="@string/you_proceed_with_the_sale"
                    android:textAlignment="center"
                    android:textColor="@color/colorGrey"
                    android:textSize="16sp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@+id/txtLocationValueExploreProductDetails"
                    app:layout_constraintStart_toStartOf="@+id/txtLocationValueExploreProductDetails"
                    app:layout_constraintTop_toBottomOf="@+id/txtLocationValueExploreProductDetails"
                    tools:text="You proceed with the Sale" />

                <TextView
                    android:id="@+id/txtCustomerInfo"
                    bindViewVisibilityGone="@{viewModel.product.visibilityCustomerInfo}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/inter400"
                    android:text="@string/customers_info"
                    android:textAlignment="center"
                    android:textColor="@color/colorTextNameProduct"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@+id/cardImageExploreProductDetails"
                    app:layout_constraintStart_toStartOf="@+id/cardImageExploreProductDetails"
                    app:layout_constraintTop_toBottomOf="@+id/txtProceedWithSaleCustomerInfo"
                    tools:text="Customers Info" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerCustomers"
                    bindRecyclerLayout="@{false}"
                    bindViewVisibilityGone="@{viewModel.product.visibilityCustomerInfo}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/shape_recycler"
                    android:backgroundTint="@color/colorGreyTab"
                    android:padding="10dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@+id/btnOrderComplete"
                    app:layout_constraintEnd_toEndOf="@+id/txtLocationValueExploreProductDetails"
                    app:layout_constraintStart_toStartOf="@+id/txtLocationValueExploreProductDetails"
                    app:layout_constraintTop_toBottomOf="@+id/txtCustomerInfo" />

                <TextView
                    android:id="@+id/txtRecyclerCustomersError"
                    bindViewVisibilityGone="@{viewModel.product.chooseCustomerError}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/inter400"
                    android:text="@string/field_require"
                    android:textColor="@color/red"
                    android:textSize="14sp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@+id/recyclerCustomers"
                    app:layout_constraintTop_toBottomOf="@+id/recyclerCustomers" />

                <Button
                    android:id="@+id/btnOrderComplete"
                    bindViewVisibilityGone="@{viewModel.product.visibilityCustomerInfo}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    android:background="@drawable/shape_button_product_store"
                    android:fontFamily="@font/inter400"
                    android:paddingVertical="8dp"
                    android:text="@string/order_complete"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/txtLocationValueExploreProductDetails"
                    app:layout_constraintStart_toStartOf="@+id/txtLocationValueExploreProductDetails"
                    app:layout_constraintTop_toBottomOf="@+id/txtRecyclerCustomersError" />

                <!--                step 4-->
                <TextView
                    android:id="@+id/txtProceedWithSaleConfirmDeal"
                    bindViewVisibilityGone="@{viewModel.product.visibilityConfirmDeal}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/inter700"
                    android:text="@string/proceeding_with_sale"
                    android:textColor="@color/colorGrey"
                    android:textSize="16sp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@+id/txtLocationValueExploreProductDetails"
                    app:layout_constraintStart_toStartOf="@+id/txtLocationValueExploreProductDetails"
                    app:layout_constraintTop_toBottomOf="@+id/txtLocationValueExploreProductDetails"
                    tools:text="Proceeding with Sale" />

                <ImageView
                    android:id="@+id/line"
                    bindViewVisibilityGone="@{viewModel.product.visibilityConfirmDeal}"
                    android:layout_width="4dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/img_line_order"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@+id/txtProceedWithSaleConfirmDeal"
                    app:layout_constraintTop_toBottomOf="@+id/txtProceedWithSaleConfirmDeal" />

                <TextView
                    android:id="@+id/txtOrderCompleting"
                    bindViewVisibilityGone="@{viewModel.product.visibilityConfirmDeal}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter700"
                    android:text="@string/order_completed_with_customer"
                    android:textColor="@color/colorGrey"
                    android:textSize="16sp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@+id/txtLocationValueExploreProductDetails"
                    app:layout_constraintStart_toStartOf="@+id/txtLocationValueExploreProductDetails"
                    app:layout_constraintTop_toBottomOf="@+id/line"
                    tools:text="Order Completed with Customer" />

                <TextView
                    android:id="@+id/txtPleaseSelect"
                    bindViewVisibilityGone="@{viewModel.product.visibilityConfirmDeal}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="14dp"
                    android:fontFamily="@font/inter700"
                    android:text="@string/please_select_the_payment_method_for_our_service_fees_of_5"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@+id/txtLocationValueExploreProductDetails"
                    app:layout_constraintStart_toStartOf="@+id/txtLocationValueExploreProductDetails"
                    app:layout_constraintTop_toBottomOf="@+id/txtOrderCompleting"
                    tools:text="Please select the payment method for our service fees of 5%" />

                <TextView
                    android:id="@+id/txtPayment"
                    bindViewVisibilityGone="@{viewModel.product.visibilityConfirmDeal}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/inter300"
                    android:text="@string/payment"
                    android:textColor="@color/colorTextGrey"
                    android:textSize="18sp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@+id/txtLocationValueExploreProductDetails"
                    app:layout_constraintTop_toBottomOf="@+id/txtPleaseSelect" />

                <TextView
                    android:id="@+id/txtPaymentMethod"
                    style="@style/textBottomSheet"
                    bindTextPaymentCheckOut="@{viewModel.product.selectedMethod}"
                    bindViewVisibilityGone="@{viewModel.product.visibilityConfirmDeal}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:drawablePadding="10dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter500"
                    android:maxLines="1"
                    android:textAlignment="textEnd"
                    android:textSize="16sp"
                    android:visibility="gone"
                    app:drawableEndCompat="@drawable/ic_down_bottom_sheet"
                    app:layout_constraintBottom_toBottomOf="@+id/txtPayment"
                    app:layout_constraintEnd_toEndOf="@+id/txtLocationValueExploreProductDetails"
                    app:layout_constraintStart_toEndOf="@+id/txtPayment"
                    app:layout_constraintTop_toTopOf="@+id/txtPayment"
                    tools:text="Cash on delivery" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardPayment"
                    bindViewVisibilityGone="@{viewModel.product.visibilityCardCash}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@+id/txtLocationValueExploreProductDetails"
                    app:layout_constraintStart_toStartOf="@+id/txtLocationValueExploreProductDetails"
                    app:layout_constraintTop_toBottomOf="@+id/txtPayment"
                    app:strokeColor="@color/colorPrimary"
                    app:strokeWidth="1dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        bindViewVisibilityGone="@{viewModel.product.visibilityDeliverySchedule}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/txtCompanyDelivery"
                            style="@style/textAddEditAddressName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/company"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/edtLayoutCompanyDelivery"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            bindTextInputLayoutEmptyError="@{viewModel.product.companyError}"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            app:boxBackgroundColor="@color/white"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusBottomEnd="@dimen/dimen_box_edit_text_corner"
                            app:boxCornerRadiusBottomStart="@dimen/dimen_box_edit_text_corner"
                            app:boxCornerRadiusTopEnd="@dimen/dimen_box_edit_text_corner"
                            app:boxCornerRadiusTopStart="@dimen/dimen_box_edit_text_corner"
                            app:boxStrokeColor="@color/color_stroke_search"
                            app:expandedHintEnabled="false"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/txtCompanyDelivery"
                            app:layout_constraintTop_toBottomOf="@+id/txtCompanyDelivery"
                            app:placeholderText="@string/select_company"
                            app:placeholderTextColor="@color/colorTextHint">

                            <AutoCompleteTextView
                                android:id="@+id/edtCompanyDelivery"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="none" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:id="@+id/txtGovernorateDelivery"
                            style="@style/textAddEditAddressName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/governorate"
                            app:layout_constraintStart_toStartOf="@+id/txtCompanyDelivery"
                            app:layout_constraintTop_toBottomOf="@+id/edtLayoutCompanyDelivery" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/edtLayoutGovernorateDelivery"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            bindTextInputLayoutEmptyError="@{viewModel.product.governorateCompanyError}"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            app:boxBackgroundColor="@color/white"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusBottomEnd="@dimen/dimen_box_edit_text_corner"
                            app:boxCornerRadiusBottomStart="@dimen/dimen_box_edit_text_corner"
                            app:boxCornerRadiusTopEnd="@dimen/dimen_box_edit_text_corner"
                            app:boxCornerRadiusTopStart="@dimen/dimen_box_edit_text_corner"
                            app:boxStrokeColor="@color/color_stroke_search"
                            app:expandedHintEnabled="false"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/txtGovernorateDelivery"
                            app:placeholderText="@string/select_your_government"
                            app:placeholderTextColor="@color/colorTextHint">

                            <AutoCompleteTextView
                                android:id="@+id/edtLineGovernmentDelivery"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="none" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerAddress"
                            bindRecyclerLayout="@{false}"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/shape_recycler"
                            android:backgroundTint="@color/colorGreyTab"
                            android:padding="10dp"
                            app:layout_constraintTop_toBottomOf="@+id/edtLayoutGovernorateDelivery" />

                        <TextView
                            android:id="@+id/txtRecyclerError"
                            bindViewVisibilityGone="@{viewModel.product.companyAddressError}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/inter400"
                            android:text="@string/field_require"
                            android:textColor="@color/red"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/recyclerAddress" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        bindViewVisibilityGone="@{viewModel.product.visibilityBankAmount}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/txtAccountNumber"
                            style="@style/textAddEditAddressName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="@{viewModel.product.iban}"
                            app:layout_constraintEnd_toStartOf="@+id/txtAccountNumberValue"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/txtAccountNumberValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter700"
                            android:text="@string/iban"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
