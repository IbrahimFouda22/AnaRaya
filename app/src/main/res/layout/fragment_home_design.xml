<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.anaraya.anaraya.home_design.HomeDesignViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@color/white"
        tools:context=".screens.home.HomeFragment">

        <ProgressBar
            android:id="@+id/progress_homeDesign"
            style="?android:attr/progressBarStyleHorizontal"
            bindProgress="@{viewModel.loadingState}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateBehavior="cycle"
            android:indeterminateTint="@color/colorPrimary"
            android:progressTint="@color/colorPrimary"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:id="@+id/nested"
            app:layout_constraintTop_toBottomOf="@+id/progress_homeDesign"
            app:layout_constraintBottom_toTopOf="@+id/bottomNavHomeDesign"
            android:fillViewport="true"
            android:layout_height="0dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSearch_homeDesign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="8dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:id="@+id/txtDelivery_homeDesign"
                            style="@style/textNormalHome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:drawablePadding="10dp"
                            android:focusable="true"
                            android:padding="5dp"
                            android:onClick="@{()->viewModel.navigateToAuth()}"
                            android:text="@string/office_delivery_schedule"
                            app:drawableEndCompat="@drawable/ic_arrow_down"
                            app:drawableStartCompat="@drawable/ic_office_delivery"
                            app:layout_constraintBottom_toTopOf="@+id/edtSearchDesign"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/edtSearchDesign"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/background_edit_search"
                            android:drawableStart="@drawable/ic_search"
                            android:drawablePadding="10dp"
                            android:enabled="false"
                            android:onClick="@{()->viewModel.navigateToAuth()}"
                            android:hint="@string/search_product"
                            android:padding="10dp"
                            app:layout_constraintEnd_toStartOf="@+id/btnFavHomeDesign"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/txtDelivery_homeDesign" />

                        <ImageButton
                            android:id="@+id/btnFavHomeDesign"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_fav"
                            android:layout_marginEnd="5dp"
                            android:onClick="@{()->viewModel.navigateToAuth()}"
                            app:layout_constraintBottom_toBottomOf="@+id/edtSearchDesign"
                            app:layout_constraintEnd_toStartOf="@+id/btnCartDesign"
                            app:layout_constraintStart_toEndOf="@+id/edtSearchDesign"
                            app:layout_constraintTop_toTopOf="@+id/edtSearchDesign" />
                        <ImageButton
                            android:id="@+id/btnCartDesign"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_cart"
                            android:onClick="@{()->viewModel.navigateToAuth()}"
                            app:layout_constraintBottom_toBottomOf="@+id/btnFavHomeDesign"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/btnFavHomeDesign"
                            app:layout_constraintTop_toTopOf="@+id/btnFavHomeDesign" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSlider_homeDesign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/cardSearch_homeDesign">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPagerSlider_homeDesign"
                        android:layout_width="match_parent"
                        android:layout_height="150dp" />
                </androidx.cardview.widget.CardView>

                <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                    android:id="@+id/dotsIndicatorSlider_homeDesign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:dotsColor="@color/colorDotsUnSelected"
                    app:dotsCornerRadius="8dp"
                    app:dotsSize="5dp"
                    app:dotsSpacing="4dp"
                    app:dotsWidthFactor="2.5"
                    app:layout_constraintBottom_toTopOf="@+id/consTrendingDesign"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardSlider_homeDesign"
                    app:progressMode="true"
                    app:selectedDotColor="@color/colorPrimary" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/consTrendingDesign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    bindVisibilityConsHomeTrending ="@{viewModel.products.visibilityTrending}"
                    app:layout_constraintEnd_toEndOf="@+id/cardSlider_homeDesign"
                    app:layout_constraintStart_toStartOf="@+id/cardSlider_homeDesign"
                    app:layout_constraintTop_toBottomOf="@+id/dotsIndicatorSlider_homeDesign">

                    <TextView
                        android:id="@+id/txtTrendingNow_homeDesign"
                        style="@style/textNormalTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/trending_now"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txtViewAllTrending_homeDesign"
                        style="@style/textNormalHome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:drawablePadding="10dp"
                        android:focusable="true"
                        android:padding="5dp"
                        android:text="@string/view_all"
                        android:onClick="@{()->viewModel.navigateToAuth()}"
                        android:textSize="12sp"
                        app:drawableEndCompat="@drawable/ic_arrow_view_all"
                        app:layout_constraintBottom_toBottomOf="@+id/txtTrendingNow_homeDesign"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/txtTrendingNow_homeDesign" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerTrendingProduct_homeDesign"
                        bindRecyclerLayout="@{true}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/txtTrendingNow_homeDesign"
                        tools:itemCount="1"
                        tools:listitem="@layout/layout_item_product" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/txtCategories_homeDesign"
                    style="@style/textNormalTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/categories"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/cardSlider_homeDesign"
                    app:layout_constraintTop_toBottomOf="@+id/consTrendingDesign" />

                <!--<TextView
                    android:id="@+id/txtViewAllCategories_home"
                    style="@style/textNormalHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:drawablePadding="10dp"
                    android:focusable="true"
                    android:padding="5dp"
                    android:text="@string/view_all"
                    android:textSize="12sp"
                    app:drawableEndCompat="@drawable/ic_more"
                    app:layout_constraintBottom_toBottomOf="@+id/txtCategories_home"
                    app:layout_constraintEnd_toEndOf="@+id/cardSlider_home"
                    app:layout_constraintTop_toTopOf="@+id/txtCategories_home" />-->

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerCategories_homeDesign"
                    bindRecyclerGridLayout="@{2}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtCategories_homeDesign"
                    tools:itemCount="1"
                    tools:listitem="@layout/layout_item_home_category" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
        <com.ismaeldivita.chipnavigation.ChipNavigationBar
            android:id="@+id/bottomNavHomeDesign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="5dp"
            app:cnb_animationDuration="400"
            app:cnb_menuResource="@menu/menu_chip"
            app:cnb_unselectedColor="@color/colorNavIconUnSelected"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>