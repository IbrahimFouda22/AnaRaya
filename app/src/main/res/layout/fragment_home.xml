<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="homeViewModel"
            type="com.anaraya.anaraya.screens.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        tools:context=".screens.home.HomeFragment">

        <ProgressBar
            android:id="@+id/progress_home"
            style="?android:attr/progressBarStyleHorizontal"
            bindProgress="@{homeViewModel.loadingState}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateBehavior="cycle"
            android:indeterminateTint="@color/colorPrimary"
            android:progressTint="@color/colorPrimary"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progress_home">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTxtPointsHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorBackgroundTextDiscount"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/txtPointsHome"
                        style="@style/textNormalHome"
                        bindTextPoints2="@{homeViewModel.pointsProducts.loyaltyPoints}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="5dp"
                        android:textSize="@dimen/dimen_text_discount_size"
                        app:drawableEndCompat="@drawable/ic_star"
                        tools:ignore="SmallSp"
                        tools:text="200 Points" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSlider_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/cardTxtPointsHome">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPagerSlider_home"
                        android:layout_width="match_parent"
                        android:layout_height="150dp" />
                </androidx.cardview.widget.CardView>

                <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                    android:id="@+id/dotsIndicatorSlider_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:dotsColor="@color/colorDotsUnSelected"
                    app:dotsCornerRadius="8dp"
                    app:dotsSize="5dp"
                    app:dotsSpacing="4dp"
                    app:dotsWidthFactor="2.5"
                    app:layout_constraintBottom_toTopOf="@+id/consTrending"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardSlider_home"
                    app:progressMode="true"
                    app:selectedDotColor="@color/colorPrimary" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/consTrending"
                    bindVisibilityConsHomeTrending="@{homeViewModel.trendingProducts.visibilityTrending}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="@+id/cardSlider_home"
                    app:layout_constraintStart_toStartOf="@+id/cardSlider_home"
                    app:layout_constraintTop_toBottomOf="@+id/dotsIndicatorSlider_home">

                    <TextView
                        android:id="@+id/txtTrendingNow_home"
                        style="@style/textNormalTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:text="@{homeViewModel.trendingProducts.trendingText}"
                        android:textAlignment="textStart"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/txtViewAllTrending_home"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Trending Now" />

                    <TextView
                        android:id="@+id/txtViewAllTrending_home"
                        style="@style/textNormalHome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:drawablePadding="10dp"
                        android:focusable="true"
                        android:padding="5dp"
                        android:text="@string/view_all"
                        android:textSize="12sp"
                        app:drawableEndCompat="@drawable/ic_arrow_view_all"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/txtTrendingNow_home" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerTrendingProduct_home"
                        bindRecyclerLayout="@{true}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/txtViewAllTrending_home"
                        tools:itemCount="1"
                        tools:listitem="@layout/layout_item_product" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/consPoints"
                    bindVisibilityConsHomeTrending="@{homeViewModel.pointsProducts.visibilityPoints}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="@+id/cardSlider_home"
                    app:layout_constraintStart_toStartOf="@+id/cardSlider_home"
                    app:layout_constraintTop_toBottomOf="@+id/consTrending">

                    <TextView
                        android:id="@+id/txtPoints_home"
                        style="@style/textNormalTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="@string/points_items"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txtViewAllPoints_home"
                        style="@style/textNormalHome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:drawablePadding="10dp"
                        android:focusable="true"
                        android:padding="5dp"
                        android:text="@string/view_all"
                        android:textSize="12sp"
                        app:drawableEndCompat="@drawable/ic_arrow_view_all"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/txtPoints_home" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerPointsProduct_home"
                        bindRecyclerLayout="@{true}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/txtViewAllPoints_home"
                        tools:itemCount="1"
                        tools:listitem="@layout/layout_item_product" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/txtCategories_home"
                    style="@style/textNormalTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/categories"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/cardSlider_home"
                    app:layout_constraintTop_toBottomOf="@+id/consPoints" />

                <!--<TextView
                    android:id="@+id/txtViewAllCategories_home"
                    style="@style/textNormalHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:drawablePadding="10dp"
                    android:focusable="true"
                    android:padding="5dp"
                    android:text="@string/view_all"
                    android:textSize="12sp"
                    app:drawableEndCompat="@drawable/ic_more"
                    app:layout_constraintBottom_toBottomOf="@+id/txtCategories_home"
                    app:layout_constraintEnd_toEndOf="@+id/cardSlider_home"
                    app:layout_constraintTop_toTopOf="@+id/txtCategories_home" />-->

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerCategories_home"
                    bindRecyclerGridLayout="@{3}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtCategories_home"
                    tools:itemCount="1"
                    tools:listitem="@layout/layout_item_home_category" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>