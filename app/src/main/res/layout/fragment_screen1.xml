<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".landing.onboarding.screen.Screen1Fragment">

        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/imgOnboard_screen1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_onboard1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtHead_screen1"
            style="@style/textHead"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/textHeadScreen1"
            app:layout_constraintEnd_toEndOf="@+id/imgOnboard_screen1"
            app:layout_constraintStart_toStartOf="@+id/imgOnboard_screen1"
            app:layout_constraintTop_toBottomOf="@+id/imgOnboard_screen1" />

        <TextView
            android:id="@+id/txtUnderHead_screen1"
            style="@style/textUnderHead"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="@string/textUnderHeadScreen1"
            app:layout_constraintEnd_toEndOf="@+id/imgOnboard_screen1"
            app:layout_constraintStart_toStartOf="@+id/imgOnboard_screen1"
            app:layout_constraintTop_toBottomOf="@+id/txtHead_screen1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>