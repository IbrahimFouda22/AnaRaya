    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.anaraya.anaraya.home.all_product.AllProductViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".home.all_product.AllProductFragment">

        <ImageButton
            android:id="@+id/btnBackAllProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtCategoryName_AllProduct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:ellipsize="end"
            android:fontFamily="@font/inter400"
            android:maxLines="2"
            android:text="@string/products"
            android:textAlignment="center"
            android:textColor="@color/colorTextNameProduct"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnBackAllProduct"
            app:layout_constraintEnd_toStartOf="@+id/btnSearchAllProduct"
            app:layout_constraintStart_toEndOf="@+id/btnBackAllProduct"
            app:layout_constraintTop_toTopOf="@+id/btnBackAllProduct"
            tools:text="Products" />

        <ImageButton
            android:id="@+id/btnSearchAllProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_search"
            app:layout_constraintBottom_toBottomOf="@+id/btnBackAllProduct"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnBackAllProduct" />

