<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools">

        <TextView
            android:id="@+id/txtTitleSurveyItemTextBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/inter500"
            android:text="@string/written_question"
            android:padding="10dp"
            android:textColor="@color/colorTextNameProduct"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Written Question" />
        <EditText
            android:id="@+id/edtSurveyTextBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="16dp"
            android:background="@drawable/background_edit_add_address"
            android:hint="@string/text_here"
            app:layout_constraintTop_toBottomOf="@+id/txtTitleSurveyItemTextBox" />
        <View
            android:id="@+id/lineUnderEdtSurveyTextBox"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/shape_line"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtSurveyTextBox" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>