<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<data>
    <variable
        name="viewModel"
        type="com.anaraya.anaraya.screens.services.store.service.my_items.MyItemsServicesViewModel" />
</data>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.services.store.service.my_items.MyItemsServicesFragment">

    <ProgressBar
        android:id="@+id/progressMyItemsServices"
        style="?android:attr/progressBarStyleHorizontal"
        bindProgress="@{viewModel.loadingState}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateBehavior="cycle"
        android:indeterminateTint="@color/colorPrimary"
        android:progressTint="@color/colorPrimary"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent" />
    <HorizontalScrollView
        android:id="@+id/horizontalScrollChipsMyItems"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbarSize="5dp"
        android:scrollbarStyle="outsideInset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressMyItemsServices">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipStatusServices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            app:chipSpacingHorizontal="10dp"
            app:singleLine="true"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipPendingServices"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pending"
                android:textColor="@color/color_text_chip"
                android:textSize="@dimen/chipTextSize"
                app:chipBackgroundColor="@color/color_background_chip"
                app:chipCornerRadius="@dimen/chipCorner"
                app:chipStrokeColor="@color/color_stroke_chip"
                app:chipStrokeWidth="@dimen/chipStroke" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAcceptedServices"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/accepted"
                android:textColor="@color/color_text_chip"
                android:textSize="@dimen/chipTextSize"
                app:chipBackgroundColor="@color/color_background_chip"
                app:chipCornerRadius="@dimen/chipCorner"
                app:chipStrokeColor="@color/color_stroke_chip"
                app:chipStrokeWidth="@dimen/chipStroke" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipRejectedServices"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rejected"
                android:textColor="@color/color_text_chip"
                android:textSize="@dimen/chipTextSize"
                app:chipBackgroundColor="@color/color_background_chip"
                app:chipCornerRadius="@dimen/chipCorner"
                app:chipStrokeColor="@color/color_stroke_chip"
                app:chipStrokeWidth="@dimen/chipStroke" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSoldServices"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sold"
                android:textColor="@color/color_text_chip"
                android:textSize="@dimen/chipTextSize"
                app:chipBackgroundColor="@color/color_background_chip"
                app:chipCornerRadius="@dimen/chipCorner"
                app:chipStrokeColor="@color/color_stroke_chip"
                app:chipStrokeWidth="@dimen/chipStroke" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipCancelServices"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/canceled"
                android:textColor="@color/color_text_chip"
                android:textSize="@dimen/chipTextSize"
                app:chipBackgroundColor="@color/color_background_chip"
                app:chipCornerRadius="@dimen/chipCorner"
                app:chipStrokeColor="@color/color_stroke_chip"
                app:chipStrokeWidth="@dimen/chipStroke" />

        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerStoreItemsServices"
        bindRecyclerLayout="@{false}"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollChipsMyItems"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>