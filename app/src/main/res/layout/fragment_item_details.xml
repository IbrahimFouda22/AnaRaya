                    android:fontFamily="@font/inter400"
                    android:maxLines="1"
                    android:textColor="@color/colorTextNameProduct"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/txtPriceExploreProductDetails"
                    app:layout_constraintEnd_toEndOf="@+id/txtNameExploreProductDetails"
                    app:layout_constraintStart_toEndOf="@+id/txtPriceExploreProductDetails"
                    app:layout_constraintTop_toTopOf="@+id/txtPriceExploreProductDetails"
                    tools:text="1000.0 EGP" />

                <TextView
