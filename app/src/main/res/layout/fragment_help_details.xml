<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.anaraya.anaraya.screens.more.help.help_details.HelpDetailsViewModel" />
        <variable
            name="problem"
            type="String" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.more.help.help_details.HelpDetailsFragment">

        <ProgressBar
            android:id="@+id/progress_helpDetails"
            style="?android:attr/progressBarStyleHorizontal"
            bindProgress="@{viewModel.helpUiState.loading}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateBehavior="cycle"
            android:indeterminateTint="@color/colorPrimary"
            android:progressTint="@color/colorPrimary"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtHelpDetailsHead"
            style="@style/textHelpDetailsHead"
            android:text="@{problem}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progress_helpDetails"
            tools:text="How to create an account:" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerHelpDetails"
            bindRecyclerLayout="@{false}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtHelpDetailsHead" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>