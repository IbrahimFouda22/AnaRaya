<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.anaraya.anaraya.screens.more.surveys.SurveyItemUiState" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/txtTitleSurvey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/inter500"
            android:padding="10dp"
            android:text="@{item.title}"
            android:textColor="@color/colorTextNameProduct"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Name" />

        <View
            android:id="@+id/lineUnderTitleSurvey"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/shape_line"
            app:layout_constraintTop_toBottomOf="@+id/txtTitleSurvey" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>